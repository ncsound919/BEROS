@echo off
title Install Build Tools for Tap-DAW
color 0A

echo.
echo  ╔════════════════════════════════════════╗
echo  ║   INSTALL BUILD TOOLS FOR TAP-DAW     ║
echo  ║   AutoCoder Generated                 ║
echo  ╚════════════════════════════════════════╝
echo.
echo  Installing CMake, MinGW, and other build tools...
echo.

REM Check if winget is available
winget --version >nul 2>&1
if %errorlevel% neq 0 (
    echo Winget not found. Please install Windows Package Manager from Microsoft Store.
    echo Alternatively, download tools manually:
    echo - CMake: https://cmake.org/download/
    echo - MinGW: https://www.mingw-w64.org/downloads/
    pause
    exit /b 1
)

echo [░░░░░░░░░░] Installing CMake...
winget install -e --id Kitware.CMake --accept-source-agreements --accept-package-agreements

echo [████░░░░░░] Installing MinGW...
winget install -e --id mingw.mingw --accept-source-agreements --accept-package-agreements

echo [████████░░] Installing Git (if not present)...
winget install -e --id Git.Git --accept-source-agreements --accept-package-agreements

echo [██████████] Installation complete!
echo.
echo  Please restart your command prompt to update PATH.
echo  Then run BUILD_ENTIRE_DAW.bat
echo.
pause
