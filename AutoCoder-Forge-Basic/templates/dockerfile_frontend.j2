# Dockerfile for AetherDesk Frontend
# Generated by AutoCoder Marathon Build
#
# Template variables:
#   - node_version: str (default "18-alpine")
#   - nginx_version: str (default "alpine")

# Stage 1: Build frontend assets
FROM node:{{ node_version }} AS builder

WORKDIR /app

# Copy package files
COPY agent-ui/package*.json ./

# Install dependencies
RUN npm ci --silent

# Copy source code
COPY agent-ui/ ./

# Build production bundle
RUN npm run build

# Stage 2: Production image with nginx
FROM nginx:{{ nginx_version }}

# Copy built assets from builder stage
COPY --from=builder /app/dist /usr/share/nginx/html

# Copy custom nginx configuration if exists
COPY nginx.conf /etc/nginx/conf.d/default.conf 2>/dev/null || true

# Expose port 80
EXPOSE 80

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=10s --retries=3 \
    CMD wget --quiet --tries=1 --spider http://localhost/ || exit 1

# Start nginx
CMD ["nginx", "-g", "daemon off;"]
