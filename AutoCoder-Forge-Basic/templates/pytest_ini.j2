# pytest.ini - pytest configuration for AetherDesk
# Generated by AutoCoder Marathon Build

[pytest]
testpaths = {{ testpaths }}
python_files = {{ python_files }}
python_classes = Test*
python_functions = test_*

addopts = {{ addopts }}

# Markers for test categorization
markers =
{% for marker in markers %}
    {{ marker }}
{% endfor %}

# Coverage settings
[coverage:run]
source = apps
omit =
    */tests/*
    */test_*
    */__pycache__/*
    */venv/*
    */AutoCoder-Forge-Basic/*

[coverage:report]
precision = 2
show_missing = True
skip_covered = False

# Filter warnings
filterwarnings =
    ignore::DeprecationWarning
    ignore::PendingDeprecationWarning
