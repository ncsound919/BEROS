# docker-compose.yml
# AetherDesk Platform - Docker Compose Stack
# Generated by AutoCoder Marathon Build
#
# Services:
{% for service in services %}
#   - {{ service }}
{% endfor %}
#
# Usage:
#   docker-compose up -d          # Start all services
#   docker-compose down           # Stop all services
#   docker-compose logs -f        # View logs
#   docker-compose ps             # Check status

version: '3.8'

{% if include_networks %}
networks:
  aetherdesk:
    driver: bridge
{% endif %}

{% if include_volumes %}
volumes:
  redis_data:
    driver: local
  postgres_data:
    driver: local
{% endif %}

services:
{% if 'redis' in services %}
  redis:
    image: redis:{{ redis_version }}
    container_name: aetherdesk-redis
    restart: unless-stopped
    ports:
      - "6379:6379"
    {% if include_volumes %}
    volumes:
      - redis_data:/data
    {% endif %}
    {% if include_networks %}
    networks:
      - aetherdesk
    {% endif %}
    command: redis-server --appendonly yes --maxmemory 256mb --maxmemory-policy allkeys-lru
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 3s
      retries: 5
{% endif %}

{% if 'backend' in services %}
  backend:
    build:
      context: .
      dockerfile: Dockerfile.backend
    container_name: aetherdesk-backend
    restart: unless-stopped
    ports:
      - "{{ backend_port }}:{{ backend_port }}"
    environment:
      - REDIS_HOST=redis
      - REDIS_PORT=6379
      - REDIS_DB=0
      - API_HOST=0.0.0.0
      - API_PORT={{ backend_port }}
      - ENVIRONMENT=production
      - DEBUG=false
      - LOG_LEVEL=INFO
      - CORS_ORIGINS=*
      - TWILIO_ACCOUNT_SID=${TWILIO_ACCOUNT_SID}
      - TWILIO_AUTH_TOKEN=${TWILIO_AUTH_TOKEN}
      - TWILIO_PHONE_NUMBER=${TWILIO_PHONE_NUMBER}
    {% if include_volumes %}
    volumes:
      - ./apps:/app/apps:ro
      - ./config:/app/config:ro
      - ./logs:/app/logs
    {% endif %}
    {% if include_networks %}
    networks:
      - aetherdesk
    {% endif %}
    depends_on:
      redis:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:{{ backend_port }}/health/live"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    command: uvicorn apps.api.main:app --host 0.0.0.0 --port {{ backend_port }} --workers 2
{% endif %}

{% if 'frontend' in services %}
  frontend:
    build:
      context: .
      dockerfile: Dockerfile.frontend
    container_name: aetherdesk-frontend
    restart: unless-stopped
    ports:
      - "{{ frontend_port }}:80"
    environment:
      - VITE_API_URL=http://localhost:{{ backend_port }}
    {% if include_networks %}
    networks:
      - aetherdesk
    {% endif %}
    depends_on:
      - backend
    healthcheck:
      test: ["CMD", "wget", "--quiet", "--tries=1", "--spider", "http://localhost:80/"]
      interval: 30s
      timeout: 10s
      retries: 3
{% endif %}

